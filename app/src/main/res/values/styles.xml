<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="TextNormalBlueDark" parent="TextAppearance.AppCompat">
        <item name="android:ellipsize">end</item>
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="TextBoldBlueDark" parent="TextAppearance.AppCompat">
        <item name="android:ellipsize">end</item>
        <item name="fontFamily">@font/opensans_semi_bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="ButtonBlue" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextTitleSemiBoldBlueDark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/bg_button_corner_30_blue</item>
    </style>

    <style name="TextTitleSemiBoldBlueDark" parent="TextAppearance.AppCompat">
        <item name="android:ellipsize">end</item>
        <item name="fontFamily">@font/opensans_semi_bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="AppTheme.FullScreen.LightStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="M">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">sans</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:statusBarColor">@color/blue_gradient_end</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:ignore="NewApi">shortEdges</item>
    </style>
    <style name="AppTheme.OTP">
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>
</resources>